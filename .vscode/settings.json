{
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.rulers": [
    80
  ],
  "editor.wordWrap": "on",
  "eslint.validate": [
    "javascript",
    "astro",
    "typescript",
    "vue"
  ],
  "files.associations": {
    "*.css": "tailwindcss",
    "*.mdx": "markdown"
  },
  "prettier.documentSelectors": [
    "**/*.astro"
  ]
}
